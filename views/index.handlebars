<body style="background-color: rgb(228, 220, 220);">
    <div style="background-color: gray; width: 800px;margin: 60px auto;">
        <div class="container" style="height: 15px;">
            <div class="row">

                <div class="col-6">
                    <h1 class="title" style="padding-left: 40px; paddind-bottom:30px;"> GREETING</h1>
                </div>
            </div>
        </div>

        <div class="container">
            <div class="row">

                <div class="col-12 addBtn" style="height:15px">
                    <table class="alet">
                        <tr>
                            {{!-- <td class="errorTxt" style="color: darkred;">{{messages.info}}</td> --}}
                        </tr>
                    </table>
                </div>
            </div>
        </div>
        <form action="/greeting" method="post" class="input-class">

            <div class="container">
                <div class="row">

                    <div class="col-6 name-input" style="display: flex; align-items: center; padding-left: 40px; ">
                        <h3 style="padding-right: 10px;">NAME</h1>
                            <input class="textBox" name="username" style="padding-left: 20px; height: 30px;" type="text"
                                placeholder="Enter name" />
                            <div style="padding-left: 30px;">{{counter}}</div>
                    </div>
                </div>
            </div>

            <div class="container">
                <div class="row">

                    <div class="col-6 radioBtn" style="display: flex; align-items: center; padding-left:40px; ">


                        <P style="color: white;">ENGLISH</P>
                        <input class="radio" name="btn" type="radio" value="english" />


                        <P style="color: white; padding-left: 30px;">ISIXHOSA</P>
                        <input class="radio" name="btn" type="radio" value="isixhosa" />

                        <P style="color: white; padding-left: 30px">AFRIKAANS</P>
                        <input class="radio" name="btn" type="radio" value="afrikaans" />
                    </div>
                </div>
            </div>
            <div class="containe " style="padding-left:40px; padding-right: 10px;">
                <div class="row">

                    <div>
                        <h1 class="TheGreeting greetText reject" id="msg" style="color: yellow;">{{validateName}}</h1>
                    </div>{{#if messages.info}}
                    <div class="entry" style="color: darkred;" >
                        <h1> {{messages.info}}</h1>
                    </div>{{/if}}
                    <div class="col addBtn btn" style="padding-top: 30px;">
                        <button class="greetBtn" type="submit" name="button" style="width: max-content;">GREET
                            ME</button>
                        <a href="/counter"><button class="restBtn" type="button"> NAMES</button></a>
                        <a href="/clear"><button class="restBtn" type="button" name="button1"
                                style="height: 26px; margin-left: 10px;">RESET</button></a>


                    </div>
                </div>
            </div>
        </form>


    </div>


<script src="timeout.js"></script>
